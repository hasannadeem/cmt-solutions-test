<div class='container'>
  <h1 class='bg-success text-center'>Providers</h1>

  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <%= render 'form' %>
    </div>
  </div>

  <table class='table'>
    <thead class='thead-dark'>
      <tr>
        <th scope='col'>NPI Number</th>
        <th scope='col'>Enumeration Type</th>
        <th scope='col'>Name</th>
        <th scope='col'>Created Epoch</th>
        <th scope='col'>Last Updated Epoch</th>
        <th scope='col'>Gender</th>
        <th scope='col'>Status</th>
        <th scope='col'>Credential</th>
        <th scope='col'>Sole Proprietor</th>
        <th scope='col'>Enumeration Date</th>
        <th scope='col'>Last Updated</th>
        <th scope='col'></th>
      </tr>
    </thead>
    <tbody id='provider_body'>
      <% @providers.each do |provider| %>
        <tr id=<%= provider.number %> >
          <td><%=provider.number %></th>
          <td><%= provider.enumeration_type %></td>
          <td><%= provider.full_name %></td>
          <td><%= provider.created_epoch %></td>
          <td><%= provider.last_updated_epoch %></td>
          <td><%= provider.basic['gender'] %></td>
          <td><%= provider.basic['status'] %></td>
          <td><%= provider.basic['credential'] %></td>
          <td><%= provider.basic['sole_proprietor'] %></td>
          <td><%= provider.basic['enumeration_date'] %></td>
          <td><%= provider.basic['last_updated'] %></td>
          <td>
              <%= link_to 'show', provider_path(provider), class: 'btn btn-info' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @providers, renderer: BootstrapPagination::Rails %>

  <%= link_to 'See Top Searched NPI', top_searched_npis_providers_path, class: 'pull-right' %>
</div>
